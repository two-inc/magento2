<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <two_payment>
                <active>1</active>
                <version>1.3.0-beta2</version>
                <title>Business invoice in 14 days</title>
                <mode>sandbox</mode>
                <invoice_type>FUNDED_INVOICE</invoice_type>
                <days_on_invoice>14</days_on_invoice>
                <finalize_purchase>1</finalize_purchase>
                <enable_order_intent>1</enable_order_intent>
                <fulfill_order>invoice</fulfill_order>
                <international_telephone_enabled>1</international_telephone_enabled>
                <company_autocomplete_enabled>1</company_autocomplete_enabled>
                <show_telephone>payment</show_telephone>
                <enable_department>1</enable_department>
                <enable_order_note>0</enable_order_note>
                <enable_project>1</enable_project>
                <enable_po_number>0</enable_po_number>
                <enable_two_link>0</enable_two_link>
                <can_use_internal>0</can_use_internal>
                <can_use_checkout>1</can_use_checkout>
                <payment_action>authorize</payment_action>
                <model>Two\Gateway\Model\Two</model>
                <enable_address_autocomplete>1</enable_address_autocomplete>
            </two_payment>
        </payment>
    </default>
</config>

